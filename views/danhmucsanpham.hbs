<head>
  {{#if title}}
  <title>{{title}}</title>
  {{/if}}
</head>

<div class="page-header">
  <div class="container-fluid">
    <div class="float-right">
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" data-original-title="Thêm danh mục sản phẩm">
        <i class="fa fa-plus"></i>
      </button>
    </div>


    <!--Dialog thêm danh mục sản phẩm -->
    <div class="container">
      <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog modal-lg">
          <div class="modal-content">
            <div class="modal-header">
              <h4 class="modal-title">Thêm danh mục</h4>
              <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <form id="ThemDanhMuc" method="POST" action="/" data-category="ao-thun-tay-dai">
              <div class="modal-body">
                <div class="form-group row required">
                  <label class="col-2 col-form-label control-label">Tên danh mục:</label>
                  <div class="col-10">
                    <input class="form-control" type="text" id="inputCategory" placeholder="Tên danh mục">
                  </div>
                </div>
              </div>
              <div class="modal-footer">
                <button type="submit" class="btn btn-primary" data-dismiss="modal">Hoàn tất</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>


    {{#if title}}
    <h1>{{title}}</h1>
    {{/if}}
    <ul class="breadcrumb">
      {{#each breadcrumbs}}
      <li>
        <a href={{this.url}}>{{name}}</a>
      </li>
      {{/each}}
    </ul>
  </div>
</div>

<div class="container-fluid">
  <div class="panel">
    <div class="panel-heading">
      <h3 class="panel-title">
        <i class="fa fa-table"></i> Danh sách các danh mục sản phẩm</h3>
    </div>
    <div class="panel-body bg-light">
      <form method="POST" id="form-product">
        <div>
          <table class="table table-bordered table-hover" id="dataTable">
            <thead>
              <tr>
                <td class="text-left">Mã danh mục</td>
                <td class="text-left"> Tên danh mục</td>
                <td class="text-center">Ngày tạo</td>
                <td class="text-center">Action</td>
              </tr>
            </thead>
            <tbody>
              {{#each categories}}
              <tr>
                <td class="text-left">{{id}} </td>
                <td class="text-left"> {{categoryName}}</td>
                <td class="text-center">{{createdAt}}</td>
                <td class="text-center">
                  <ul>
                    <li>
                      <a href="" data-toggle="tooltip" title="Xóa danh mục này" data-original-title="Delete" class="delete"
                        data-id={{id}}>Xóa</a>
                    </li>
                    <li>
                      <a href="" data-toggle="tooltip" title="Sửa danh mục này" data-original-title="Edit" class="edit" data-id={{id}}>Sửa</a>
                    </li>
                  </ul>
                </td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
  $(function () {
    $('#abc button').click(function () {
      $("#abc").submit();
    })
  })
</script>