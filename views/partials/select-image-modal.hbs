<div class="modal fade bd-example-modal-lg" id="filemanager">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">Chọn hình ...</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <!-- Modal body -->
      <div class="modal-body">
        <div class="row">
          <div class="col-sm-3">
          <button type="button" data-toggle="tooltip" title="" id="button-upload" class="btn btn-primary" data-original-title="Upload">
            <i class="fa fa-upload"></i>
          </button>
          <button type="button" data-toggle="tooltip" title="" id="button-delete" class="btn btn-danger" data-original-title="Delete">
            <i class="fas fa-trash-alt"></i>
          </button>
        </div>
        <div class="col-sm-7">
          <div class="input-group">
            <input type="text" name="search" value="" placeholder="Search.." class="form-control">
            <span class="input-group-btn">
              <button type="button" data-toggle="tooltip" title="" id="button-search" class="btn btn-primary" data-original-title="Search">
                <i class="fa fa-search"></i>
              </button>
            </span>
          </div>
        </div>
        </div>
        <hr>
        <div class="row" id="imagePreview">
            {{#each modelImages}}
            <div class="col-md-3">
              <img src="/upload/{{url}}" style="width: 100%;" data-value="{{url}}">
            </div>
            {{/each}}
        </div>
      </div>

      <!-- Modal footer -->
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
      </div>

    </div>
  </div>
</div>




